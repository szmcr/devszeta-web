---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FloatingButtons from "../components/FloatingButtons.astro";
import { getLangFromUrl, useTranslations, type Language } from "../i18n";

interface Props {
  title?: string;
  description?: string;
  lang?: Language;
}

const currentLang = Astro.props.lang || getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);

const { 
  title = t("meta.title"), 
  description = t("meta.description")
} = Astro.props;
---

<!doctype html>
<html lang={currentLang} class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap"
      rel="stylesheet"
    />

    <!-- View Transitions -->
    <ViewTransitions />
  </head>
  <body class="bg-primary text-white font-roboto antialiased">
    <Header lang={currentLang} />
    <main>
      <slot />
    </main>
    <Footer lang={currentLang} />
    <FloatingButtons />
  </body>
</html>
