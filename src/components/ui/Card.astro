---
interface Props {
  class?: string;
  hover?: boolean;
}

const { class: className = "", hover = true } = Astro.props;

const hoverStyles = hover ? "hover:border-accent/50 hover:shadow-xl hover:shadow-accent/10 hover:-translate-y-1" : "";
---

<div class={`bg-white/5 border border-white/10 rounded-2xl p-6 transition-all duration-300 ${hoverStyles} ${className}`}>
  <slot />
</div>
