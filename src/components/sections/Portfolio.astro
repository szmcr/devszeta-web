---
import SectionTitle from "../ui/SectionTitle.astro";
import { useTranslations, type Language } from "../../i18n";
import { projects } from "../../data/projects";

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const projectsPath = lang === "en" ? "/en/projects" : "/proyectos";
---

<section id="portafolio" class="py-20 md:py-32 bg-white/[0.02]">
  <div class="container mx-auto px-4">
    <SectionTitle subtitle={t("portfolio.subtitle")}>
      {t("portfolio.title")}
    </SectionTitle>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {projects.map((project) => {
        const category = t(`projects.${project.id}.category` as any);
        const shortDescription = t(`projects.${project.id}.shortDescription` as any);
        return (
          <a 
            href={`${projectsPath}/${project.id}`}
            class="group relative overflow-hidden rounded-2xl bg-white/5 border border-white/10 hover:border-accent/50 transition-all duration-300 block"
          >
            <!-- Project Image -->
            <div class="aspect-video bg-gradient-to-br from-accent/20 to-purple-500/20 overflow-hidden">
              <img 
                src={project.image} 
                alt={project.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                onerror="this.style.display='none'"
                transition:name={`project-image-${project.id}`}
              />
            </div>
            
            <div class="p-6">
              <span class="text-accent text-xs font-medium uppercase tracking-wider">
                {category}
              </span>
              <h3 class="text-xl font-semibold text-white mt-2 mb-3 group-hover:text-accent transition-colors">
                {project.title}
              </h3>
              <p class="text-white/60 text-sm mb-4">
                {shortDescription}
              </p>
              <div class="flex flex-wrap gap-2">
                {project.tools.slice(0, 3).map((tool) => (
                  <span class="px-2 py-1 bg-white/10 rounded text-xs text-white/70">
                    {tool}
                  </span>
                ))}
                {project.tools.length > 3 && (
                  <span class="px-2 py-1 bg-white/10 rounded text-xs text-white/70">
                    +{project.tools.length - 3}
                  </span>
                )}
              </div>
            </div>

            <!-- Hover overlay -->
            <div class="absolute inset-0 bg-accent/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
          </a>
        );
      })}
    </div>
  </div>
</section>
