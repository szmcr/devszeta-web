---
import SectionTitle from "../ui/SectionTitle.astro";
import Button from "../ui/Button.astro";
import { useTranslations, type Language } from "../../i18n";

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

// SVG icons for values
const icons = {
  innovation: `<svg class="w-10 h-10 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/></svg>`,
  quality: `<svg class="w-10 h-10 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/></svg>`,
  commitment: `<svg class="w-10 h-10 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/></svg>`,
  punctuality: `<svg class="w-10 h-10 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>`,
};

const values = [
  {
    icon: icons.innovation,
    title: t("about.value.innovation"),
    description: t("about.value.innovation.desc"),
  },
  {
    icon: icons.quality,
    title: t("about.value.quality"),
    description: t("about.value.quality.desc"),
  },
  {
    icon: icons.commitment,
    title: t("about.value.commitment"),
    description: t("about.value.commitment.desc"),
  },
  {
    icon: icons.punctuality,
    title: t("about.value.punctuality"),
    description: t("about.value.punctuality.desc"),
  },
];
---

<section id="nosotros" class="py-20 md:py-32">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div>
        <SectionTitle subtitle={t("about.subtitle")} align="left">
          {t("about.title")}
        </SectionTitle>
        
        <p class="text-white/70 mb-6 leading-relaxed">
          {t("about.description1")}
        </p>
        
        <p class="text-white/70 mb-8 leading-relaxed">
          {t("about.description2")}
        </p>
        
        <Button href="#contacto" variant="primary">
          {t("about.cta")}
        </Button>
      </div>
      
      <!-- Values Grid -->
      <div class="grid grid-cols-2 gap-4">
        {values.map((value) => (
          <div class="bg-white/5 border border-white/10 rounded-xl p-6 hover:border-accent/50 transition-colors">
            <div class="mb-3" set:html={value.icon} />
            <h4 class="font-semibold text-white mb-2">{value.title}</h4>
            <p class="text-sm text-white/60">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
