---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { projects, type Project } from "../../data/projects";
import { useTranslations } from "../../i18n";

export const prerender = true;

export function getStaticPaths() {
  return projects.map((project) => ({
    params: { id: project.id },
    props: { project },
  }));
}

interface Props {
  project: Project;
}

const { project } = Astro.props;
const lang = "es";
const t = useTranslations(lang);

// Get translated content for this project
const category = t(`projects.${project.id}.category` as any);
const shortDescription = t(`projects.${project.id}.shortDescription` as any);
const fullDescription = t(`projects.${project.id}.fullDescription` as any);
---

<BaseLayout title={`${project.title} | DevSZeta`} lang={lang}>
  <!-- Hero Section -->
  <section class="pt-32 pb-16 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-accent/10 via-transparent to-transparent"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <!-- Breadcrumb -->
      <nav class="mb-8">
        <ol class="flex items-center gap-2 text-sm text-white/60">
          <li><a href="/" class="hover:text-accent transition-colors">{t("nav.home")}</a></li>
          <li>/</li>
          <li><a href="/#portafolio" class="hover:text-accent transition-colors">{t("nav.portfolio")}</a></li>
          <li>/</li>
          <li class="text-white">{project.title}</li>
        </ol>
      </nav>

      <!-- Project Header -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <span class="inline-block px-4 py-2 bg-accent/20 text-accent rounded-full text-sm font-medium mb-4">
            {category}
          </span>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
            {project.title}
          </h1>
          <p class="text-lg text-white/70 mb-8">
            {shortDescription}
          </p>
          
          <!-- Project Meta -->
          <div class="flex flex-wrap gap-6 text-sm">
            {project.client && (
              <div>
                <span class="text-white/50 block mb-1">{t("project.client")}</span>
                <span class="text-white font-medium">{project.client}</span>
              </div>
            )}
            <div>
              <span class="text-white/50 block mb-1">{t("project.year")}</span>
              <span class="text-white font-medium">{project.year}</span>
            </div>
            <div>
              <span class="text-white/50 block mb-1">{t("project.category")}</span>
              <span class="text-white font-medium">{category}</span>
            </div>
          </div>
        </div>

        <!-- Main Image -->
        <div class="relative">
          <div class="aspect-video rounded-2xl overflow-hidden bg-white/5 border border-white/10">
            <img 
              src={project.image} 
              alt={project.title}
              class="w-full h-full object-cover"
              transition:name={`project-image-${project.id}`}
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Project Content -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-10">
          <!-- Description -->
          <div>
            <h2 class="text-2xl font-bold text-white mb-4">{t("project.about")}</h2>
            <p class="text-white/70 leading-relaxed">{fullDescription}</p>
          </div>

          <!-- Gallery -->
          {project.gallery && project.gallery.length > 0 && (
            <div>
              <h3 class="text-xl font-bold text-white mb-6">{t("project.gallery")}</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {project.gallery.map((img) => (
                  <div class="aspect-video rounded-xl overflow-hidden bg-white/5 border border-white/10">
                    <img 
                      src={img} 
                      alt={`${project.title} screenshot`}
                      class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                    />
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <!-- Tools Used -->
          <div class="bg-white/5 border border-white/10 rounded-2xl p-6 mb-6 sticky top-24">
            <h3 class="text-lg font-semibold text-white mb-4">{t("project.tools")}</h3>
            <div class="flex flex-wrap gap-2 mb-6">
              {project.tools.map((tool) => (
                <span class="px-3 py-1.5 bg-accent/20 text-accent text-sm rounded-full">
                  {tool}
                </span>
              ))}
            </div>

            <!-- Tags -->
            <h3 class="text-lg font-semibold text-white mb-4">{t("project.tags")}</h3>
            <div class="flex flex-wrap gap-2 mb-6">
              {project.tags.map((tag) => (
                <span class="px-3 py-1.5 bg-white/10 text-white/70 text-sm rounded-full">
                  {tag}
                </span>
              ))}
            </div>

            <!-- Project Link -->
            {project.link && (
              <a 
                href={project.link}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center gap-2 w-full px-6 py-4 bg-accent hover:bg-accent-dark text-white font-medium rounded-xl transition-colors mb-4"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
                {t("project.viewProject")}
              </a>
            )}

            <!-- Back Button -->
            <a 
              href="/#portafolio"
              class="flex items-center justify-center gap-2 w-full px-6 py-4 bg-white/10 hover:bg-white/20 text-white font-medium rounded-xl transition-colors"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
              {t("project.backToPortfolio")}
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
